<%- model_class = Deploy -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>
      <th><%= model_class.human_attribute_name(:requestor_id) %></th>
      <th><%= model_class.human_attribute_name(:pull_request) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:sha) %></th>
      <th><%= model_class.human_attribute_name(:branch) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deploys.each do |deploy| %>
      <tr>
        <td><%= link_to deploy.id, deploy_path(deploy) %></td>
        <td><%= deploy.project_id %></td>
        <td><%= deploy.requestor_id %></td>
        <td><%= deploy.pull_request %></td>
        <td><%= deploy.state %></td>
        <td><%= deploy.sha %></td>
        <td><%= deploy.branch %></td>
        <td><%=l deploy.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_deploy_path(deploy), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      deploy_path(deploy),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_deploy_path,
            :class => 'btn btn-primary' %>
